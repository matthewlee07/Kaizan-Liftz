<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h2 class="text-light">Change your password</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
                <%= f.label :password, "New password" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="field">
                <%= f.label :password_confirmation, "Confirm new password" %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
            </div>

            <div class="actions">
                <%= f.submit "Change my password", class:"btn btn-warning my-2" %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div> 
