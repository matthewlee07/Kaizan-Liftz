<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h2 class="text-light">Forgot your password?</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
            </div>

            <div class="actions">
                <%= f.submit "Send me reset password instructions", class:"btn btn-warning my-2" %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div> 