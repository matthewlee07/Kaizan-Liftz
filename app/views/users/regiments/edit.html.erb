<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h1 class="text-center"><%= @regiment.exercise.name %></h1>
            <div class="container bg-secondary rounded p-4" >
                <%= form_for([current_user, @regiment]) do |f| %>
                <%= f.label :sets%>
                <%= f.select :sets, (1..100) %>
                <%= f.label :reps%>
                <%= f.select :reps, (1..100) %>
                <%= f.label :weight%>
                <%= f.select :weight, (5..1000).step(5) %>
                <%= f.submit "Save", {:class => "btn btn-outline-warning float-right" }%>
                <% end %>
            </div>
        </div>
    </div>
</div>