<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <h1 class="text-light text-center">Accordian for all sections</h1>
        <div class="col-sm-10 devise-form rounded bg-dark text-warning my-4">
            <h1 class="text-center"><%= @workout.name %></h1>
            <ul class="list-unstyled my-4 list-inline">
                <div class="row">
                    <li class="text-light list-inline-item col">Exercise</li>
                    <li class="text-warning list-inline-item col"> Sets</li>
                    <li class="text-warning list-inline-item col"> Reps</li>
                    <li class="text-warning list-inline-item col"> Weight</li>
                    <li class="text-warning list-inline-item col"></li>
                </div>
            </ul>
            <span class="d-block">
                <h5 class="text-danger">TODO: order alphabetically </h5>
                <h5 class="text-danger">TODO: change url when Edit is clicked</h5>
                <% @workout.regiments.each do |regiment| %>
                    <ul class="list-unstyled my-4 list-inline">
                        <div class="row">
                            <li class="text-warning list-inline-item col"><%= regiment.exercise.name %></li>
                            <li class="text-light list-inline-item col"> <%= regiment.sets %></li>
                            <li class="text-light list-inline-item col"> <%= regiment.reps %></li>
                            <li class="text-light list-inline-item col"> <%= regiment.weight %></li>
                            
                            <li class="text-light list-inline-item col">
                                <%= link_to 'Edit', edit_user_regiment_path(current_user, regiment),class: "btn btn-outline-warning"%>
                            </li>
                        </div>
                    </ul>
                    <hr >
                <% end %>
            </span>
            <div>
                <%= link_to 'Back', user_workouts_path, class: "btn btn-outline-warning"  %>
            </div>
        </div>

        <div class="col-sm-10 devise-form rounded bg-dark text-warning my-4">
            <h1 class="text-center">List all Workout Entries</h1>
            <div>
                <%= link_to 'Back', user_workouts_path, class: "btn btn-outline-warning"  %>
            </div>
        </div>

        <div class="col-sm-10 devise-form rounded bg-dark text-warning my-4">
            <h1 class="text-center">Create New Workout Entry Form</h1>
            <div>
                <%= link_to 'Back', user_workouts_path, class: "btn btn-outline-warning"  %>
            </div>
        </div>
    </div>
</div>