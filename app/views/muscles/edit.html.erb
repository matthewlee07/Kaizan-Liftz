<div class="container-fluid main pb-5 mb-5">
  <div class="row justify-content-center ">
    <div class="col-sm-10 devise-form rounded bg-dark text-warning">
      <h1 class="text-light">Edit <%= @muscle.name %></h1>

      <%= form_for(@muscle) do |f| %>
      <div class="form-group">
        <%= render 'shared/error_messages', :@profile => @muscle %>
        <%= f.label :name %> <%= f.text_field :name, autofocus: true, class: 'form-control mb-4'%> 
        
        <%= link_to 'Back', muscles_path, class: "btn btn-outline-warning"  %>
        <%= f.submit "Save", class: "btn btn-outline-warning" %> <% end %>
      </div>
    </div>
  </div>
</div>