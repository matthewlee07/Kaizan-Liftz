<div class="container-fluid main pb-5 mb-5">
  <div class="row justify-content-center ">
    <div class="col-sm-10 devise-form rounded bg-dark text-warning">
      <h1>Muscle</h1>
      <span class="d-block mb-2">
        Name:
        <span class="text-light">
          <%= @muscle.name %>
        </span>
      </span>

      <div>
        <%= link_to 'Back', muscles_path, class: "btn btn-outline-warning"  %>

        <% if current_user.try(:admin?)%>
            <a href="/muscles/<%=@muscle.id %>/edit" class="btn btn-outline-warning" >
                Edit
            </a>
            <%= link_to "delete", @Customer, method: :delete, data: { confirm: "You sure?" }, class: ["btn","btn-danger"] %>
        <% end %>
      </div>

    </div>
  </div>
</div>
