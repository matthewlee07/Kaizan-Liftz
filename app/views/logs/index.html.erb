<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h1 class="text-center">Logs</h1>
            <%= render 'shared/paginate', :@profile => @logs %>
            
            <ul class="list-unstyled bg-secondary rounded">
                <% @log.workout_regiments(current_user.id).each do |regiment| %>
                    <li class="p-2">
                        <%= link_to regiment.workout.name, regiment, {:class => "text-light pl-5 font-weight-bold text-left"} %>
                    </li>
                <% end %>
            </ul>

            <%= render 'shared/paginate', :@profile => @logs%>
            <div class="text-center mt-2">
                <%= link_to 'Home', root_path, class: "btn btn-lg btn-outline-warning"  %>
                <%# <%= link_to "Add log", new_log_path, class: "btn btn-lg btn-outline-warning" %>
            </div>
        </div>
    </div>
</div> 
