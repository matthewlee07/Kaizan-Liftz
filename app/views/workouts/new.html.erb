<div class="container-fluid main pb-5 mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h1 class="text-light">New Workout</h1>

            <%= form_for(@workout) do |f| %>
            <div class="form-group">
                <%= render 'shared/error_messages', :@profile => @workout %>
                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true, class: 'form-control'%>

                <div class="exercise_set">
                    <div class="exercise_set_item_container my-4" >
                        <%= f.fields_for :regiments do |regiment| %>                    
                            <%= render 'regiment_fields', f: regiment, exercises: :exercises %>
                        <% end %>
                    </div>
                    <%= link_to_add_association 'Add Exercise', f, :regiments, {:class=> "btn btn-outline-warning my-4"}%>
                </div>

                <%= link_to 'Back', workouts_path, class: "btn btn-outline-warning" %>
                <%= f.submit "Save", class: "btn btn-outline-warning my-2" %>
                <% end %>
            </div>
        </div>
    </div>
</div>