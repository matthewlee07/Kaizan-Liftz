<div class="nested-fields mt-2">
    <%= f.label :exercise_id %>
    <%= f.select :exercise_id, Exercise.all.collect{|exercise|[exercise.name, exercise.id]}, {}, {:class => 'form-control'}%>
    <div class="clearfix mt-2">
        <%= f.label :sets%>
        <%= f.select :sets, (1..100) %>
        <%= f.label :reps%>
        <%= f.select :reps, (1..100) %>
        <%= f.label :weight%>
        <%= f.select :weight, (5..1000).step(5) %>
        <%= link_to_remove_association 'Remove exercise', f, class: 'btn btn-danger float-right' %>
    </div>
</div>
