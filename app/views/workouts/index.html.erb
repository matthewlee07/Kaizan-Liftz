<div class="container-fluid main">
    <div class="row justify-content-center ">
        <div class="col-sm-10 devise-form rounded bg-dark text-warning">
            <h1 class="text-center">Workouts</h1>
            <%= render 'shared/paginate', :@profile => @workouts%>
            <ul class="list-unstyled bg-secondary rounded">
                <% @workouts.each do |workout| %>
                <li class="m-2 p-1">
                    <%= link_to workout.name, workout, {:class => "text-light pl-5 font-weight-bold"}  %>
                </li>
                <% end %>
            </ul>
            <%= render 'shared/paginate', :@profile => @workouts%>
            <div class="text-center mt-2">
                <%= link_to "Add workout", new_workout_path, class: "btn btn-lg btn-outline-warning" %>
            </div>
        </div>
    </div>
</div> 
